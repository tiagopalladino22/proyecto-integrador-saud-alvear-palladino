
	<!-- Header -->
	<%- include("./partials/headerLogueado") %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="https://www.grandespymes.com.ar/wp-content/uploads/2021/02/elon-musk.jpg" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title">Elon Musk
						<a href="http://localhost:3000/perfil/editar">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>26 comentarios</li>
						<li>4 productos</li>						
						<li>2021 seguidores</li>
						
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for(let i=0; i < productos.length; i++) { %> 
				<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="http://localhost:3000/producto/<%= productos[i].id %>">
						<figure class="product-box_image">
							<img src="<%= productos[i].imagen %>" alt="<%= productos[i].nombre %>">
						</figure>
						<article class="product-box_data">
							<h2><%= productos[i].nombre %></h2>
							<h3>$ <%= productos[i].precio %></h3>
							<p><%= productos[i].descripcion %></p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<% } %> 
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>